{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask (launch via flask run)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}",
      "env": {
        "FLASK_APP": "wsgi.py",          // or "app.py" or your entry file
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port", "5001",
        "--host", "127.0.0.1"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}
